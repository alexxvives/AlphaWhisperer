# SMTP Configuration for Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_app_password_here
ALERT_TO=you@example.com

# Telegram Configuration (FREE, UNLIMITED) - Optional
# Get bot token from @BotFather on Telegram
# Get your chat_id from @userinfobot on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
USE_TELEGRAM=false

# Signal Detection Thresholds
LOOKBACK_DAYS=7
CLUSTER_DAYS=5
MIN_LARGE_BUY=250000
MIN_CEO_CFO_BUY=100000
MIN_CLUSTER_BUY_VALUE=300000
MIN_FIRST_BUY_12M=50000
MIN_SECTOR_CLUSTER_VALUE=1000000
MIN_BEARISH_CLUSTER_VALUE=1000000

# Optional: Rate limiting and retry settings
MAX_RETRIES=3
RETRY_DELAY=2
REQUEST_TIMEOUT=30
